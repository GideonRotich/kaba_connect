<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@color/shimmertop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/huawei"
        app:cardBackgroundColor="@android:color/white">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:background="@color/shimmer"
            android:id="@+id/imageonet"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp">

        </ImageView>


        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@color/shimmer"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="8dp">

        </ImageView>
        <ImageView
            android:layout_width="106dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="96dp"
            android:background="@color/shimmer"
            android:id="@+id/imagefivet">
        </ImageView>
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@color/shimmer"
            android:layout_marginTop="128dp"
            android:layout_marginLeft="8dp">

        </ImageView>
        <ImageView
            android:layout_width="106dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="126dp"
            android:background="@color/shimmer"
            android:id="@+id/imagesixy">
        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="156dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/shimmer"
            android:id="@+id/imagesevenu">
        </ImageView>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/huawei"
        app:cardBackgroundColor="@android:color/white">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:background="@color/shimmer"
            android:id="@+id/imageone"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp">

        </ImageView>


        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@color/shimmer"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="8dp">

        </ImageView>
        <ImageView
            android:layout_width="106dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="96dp"
            android:background="@color/shimmer"
            android:id="@+id/imagefive">
        </ImageView>
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@color/shimmer"
            android:layout_marginTop="128dp"
            android:layout_marginLeft="8dp">

        </ImageView>
        <ImageView
            android:layout_width="106dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="126dp"
            android:background="@color/shimmer"
            android:id="@+id/imagesix">
        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="156dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/shimmer"
            android:id="@+id/imageseven">
        </ImageView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>



</RelativeLayout>