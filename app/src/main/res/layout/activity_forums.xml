<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shimmertop"
    tools:context=".ForumsActivity">

    <RelativeLayout
        android:id="@+id/yes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/mmoja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_baseline_arrow_back_24">

        </ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/proffg"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/mmoja"
            android:src="@drawable/placeholderthree">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="Computer science"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp"
            android:id="@+id/comps"
            android:layout_centerHorizontal="true"
            android:text="Forum description">

        </TextView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_baseline_more_vert_24">

        </ImageView>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_fara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yes"
        android:layout_marginBottom="60dp">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/commentRelative"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:padding="4dp">


        <EditText
            android:id="@+id/add_fara"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/post_fara"
            android:background="@drawable/ic_kapili"
            android:hint="Write your post.."
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:textColorHint="@android:color/white">

        </EditText>

        <ImageView
            android:id="@+id/post_fara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:padding="8dp"
            android:src="@drawable/ic_kamoja"
            android:text="Post"
            android:textColor="@color/purple_500">

        </ImageView>

    </RelativeLayout>





</RelativeLayout>